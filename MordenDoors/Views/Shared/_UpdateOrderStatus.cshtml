@model MordenDoors.ViewModels.OrderViewModel

<div class="container-fluid">
    <div class="row text-center">
        <div class="col-md-10 col-lg-10 text-center pt-2 pb-1">
            <h2><b>Order Status</b></h2>
        </div>
        <div class="col-md-2">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="col-md-12 col-lg-12">
            <form class="form-inline">
                <div class="form-group">
                    <h2 for="OrderNo" class="badge badge-info p-2 mr-2">Order No:&nbsp;<span  id="txtOrderNo"></span></h2>
                </div>  
                <div class="form-group">
                    <h2 for="OrderNo" class="badge badge-success p-2 mr-2">Total Products:&nbsp;<span id="txtQty"></span></h2>
                    @*<label for="Qty" class="mr-sm-2">Qty:</label>
                    <label class="badge badge-success mr-sm-2" id="txtQty"></label>*@
                </div>
                <div class="form-group">
                    <label for="NewOp" class="mr-2">Select Product:</label>
                    @Html.DropDownList("productName", Model.Products, new { @class = "form-control mr-2" })
                </div>
                <div class="form-group">
                    <label for="NewOp" class="mr-2">Add new operation:</label>
                    @Html.DropDownList("workstageId", Model.OrdersWorkStages, new { @class = "form-control mr-2"})
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-lg btn-info" onclick="addStageRow()">Add</button>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-body">
        <table id="tblOperations" class="table table-striped">
            <thead>
                <tr>
                    <th hidden>id</th>
                    <th hidden>ItemId</th>
                    <th>Product</th>
                    <th>Workstage</th>
                    <th>Item Qty</th>
                    <th>Employee</th>
                    <th>StartTime</th>
                    <th>Complete</th>
                    <th>Qty Done</th>
                    <th>Location</th>
                    <th>FinishTime</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>
